{
  "name": "jdwx/log",
  "description": "A simple PHP framework for logging with optional telemetry.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "JDWX\\Log\\": "src/"
    }
  },
  "require": {
    "php": ">=8.2.0",
    "jdwx/json-php": "^1.1.2",
    "psr/log": "^3.0",
    "phan/phan": "^v5",
    "phpstan/phpstan": "^2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "jetbrains/phpstorm-attributes": "^1.0",
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "phan": "PHAN_ALLOW_XDEBUG=1 php -d xdebug.mode=off vendor/bin/phan --no-progress-bar --analyze-twice",
    "phpstan": "php -d xdebug.so vendor/bin/phpstan --no-progress",
    "phpunit": "vendor/bin/phpunit tests"
  }
}
